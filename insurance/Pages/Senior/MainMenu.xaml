<Page x:Class="insurance.Pages.Senior.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:insurance.Pages.Senior"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="MainMenu">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="0,30,30,0" Background="White">
                <StackPanel VerticalAlignment="Center">
                    <Label Height="60"/>
                    <Image x:Name="Scouts" Width="60" Height="60" Source="/Assets/Scouts.png" MouseDown="Scouts_MouseDown"/>
                    <Label Height="60"/>
                    <Image x:Name="Payouts" Width="60" Height="60" Source="/Assets/Payouts.png" MouseDown="Payouts_MouseDown"/>
                    <Label Height="60"/>
                    <Image x:Name="Requests" Width="60" Height="60" Source="/Assets/Requests.png" MouseDown="Requests_MouseDown"/>
                    <Label Height="60"/>
                </StackPanel>
            </Border>
            <Label/>
            <Frame x:Name="Main" Width="1132"/>
        </StackPanel>
    </Grid>
</Page>
